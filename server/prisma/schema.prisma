generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id     String  @id @default(uuid())
  name   String  @unique
  boards Board[]
}

model Card {
  id       String @id @default(uuid())
  name     String
  content  String
  columnId String
  Column   Column @relation(fields: [columnId], references: [id])
  position String
}

model Column {
  id       String  @id @default(uuid())
  name     String
  position String
  Board    Board?  @relation(fields: [boardId], references: [id])
  boardId  String?
  Card     Card[]
}

model Board {
  id     String   @id @default(uuid())
  title  String   @unique
  Column Column[]
  user   User?    @relation(fields: [userId], references: [id])
  userId String?
}
